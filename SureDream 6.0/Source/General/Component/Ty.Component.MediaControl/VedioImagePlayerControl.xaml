<UserControl x:Class="Ty.Component.MediaControl.VedioImagePlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ty.Component.MediaControl"
             xmlns:imagecontrol="clr-namespace:Ty.Component.ImageControl;assembly=Ty.Component.ImageControl"
             mc:Ignorable="d" Cursor="Hand" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid> 

        <imagecontrol:ImagePlayerControl x:Name="control_image"/>

        <local:MediaPlayerControl x:Name="control_media"/>
    </Grid>
</UserControl>
