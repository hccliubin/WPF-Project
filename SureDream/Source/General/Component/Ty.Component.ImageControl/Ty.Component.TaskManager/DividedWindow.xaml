<Window x:Class="Ty.Component.TaskManager.DividedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ty.Component.TaskManager"
        mc:Ignorable="d"
        Title="DividedWindow" Height="350" Width="1000">
    <Grid>
        <local:TaskDivisionControl/>

        <Button Content="确定" Grid.Row="1" Width="100" Height="30" 
                HorizontalAlignment="Right" Margin="10" Click="Button_Click"
                VerticalAlignment="Bottom" Command="{Binding RelayCommand}" CommandParameter="btn_sumit"/>

    </Grid>
</Window>
